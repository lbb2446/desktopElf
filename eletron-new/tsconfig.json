{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "checkJs": false,
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["src/*"],
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "typings"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
